// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Locations {
  idLocation String @id @default(uuid())
  location   String
}

model Specializations {
  idSpecialization String @id @default(uuid())
  specialization   String
}

model LawOffice {
  idLawOffice          String         @id @default(uuid())
  lawOfficeName        String
  ratings              Ratings[]
  officeSpecialization String
  services             Services[]
  city                 String
  address              String
  profile              String?
  appointments         Appointments[]
  comments             Comments[]
  email                String?        @unique
  password             String?
}

model Services {
  idService    String    @id @default(uuid())
  serviceName  String
  servicePrice String
  lawOffice    LawOffice @relation(fields: [idOffice], references: [idLawOffice], onDelete: Cascade)
  idOffice     String
}

model Ratings {
  idRating  String    @id @default(uuid())
  rating    Int
  lawOffice LawOffice @relation(fields: [idOffice], references: [idLawOffice], onDelete: Cascade)
  idOffice  String
  user      User?     @relation(fields: [idUser], references: [idUser])
  idUser    String?
}

model Appointments {
  idAppointment String    @id @default(uuid())
  date          DateTime
  lawOffice     LawOffice @relation(fields: [IdOffice], references: [idLawOffice], onDelete: Cascade)
  IdOffice      String
  isBooked      Boolean   @default(false)
  createdAt     DateTime  @default(now())
  customer      User?     @relation(fields: [idCustomer], references: [idUser])
  idCustomer    String?
  service       String
}

model Comments {
  idComment String    @id @default(uuid())
  comment   String
  LawOffice LawOffice @relation(fields: [idOffice], references: [idLawOffice], onDelete: Cascade)
  idOffice  String
  user      User    @relation(fields: [idUser], references: [idUser])
  idUser    String
}

model User {
  idUser       String         @id @default(uuid())
  email        String         @unique
  userName     String
  password     String
  Comments     Comments[]
  Appointments Appointments[]
  Ratings      Ratings[]
}
